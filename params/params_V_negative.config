# phases, modes
compute_what phases
improved_boundaries true
# T, U, V
model_parameters 0 -4 -2
# Number of discretization points for the iterator that is being split to MPI
global_iterator_steps 320
global_iterator_upper_limit 4
global_iterator_type U
# Number of discretization points for the second iterator
second_iterator_steps 160
second_iterator_upper_limit 1.5
second_iterator_type T
# Half the number of points in k-space per direction
k_discretization 60
output_folder V-2/
use_broyden true
start_basis_at -1
number_of_basis_terms 10