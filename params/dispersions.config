# phases, modes, dispersions
compute_what dispersions
improved_boundaries false
# T, U, V
model_parameters 0 -2.5 0
# Allows favouring CDW over SC, default 0.5, 0 = pure SC, 1 = pure CDW
ratio_CDW_SC 0
# chain, square, cube
lattice_type square
use_DOS false
# Number of discretization points for the iterator that is being split to MPI
global_iterator_steps 1
global_iterator_upper_limit -1
global_iterator_type V
# Number of discretization points for the second iterator
second_iterator_steps 160
second_iterator_upper_limit 0
second_iterator_type U
# Half the number of points in k-space per direction
k_discretization 20
output_folder test/
use_broyden true
start_basis_at 0
number_of_basis_terms 4